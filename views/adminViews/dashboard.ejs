        };

        async function renderPieChart() {
            try {
                const response = await fetch(`/admin/pie-chart`)
                const dataJS = await response.json();
                console.log(dataJS)
                let data = [];
                dataJS.forEach((e) => {
                    let element = document.querySelector(`#${e._id}`)
                    element.textContent = e.totalOrders
                    data.push(e.totalOrders)
                })


                console.log(data)
                new Chart(document.getElementById("chartjs-dashboard-pie"), {
                    type: "pie",
                    data: {
                        labels: ["COD", "Razor pay", "Wallet"],
                        datasets: [{
                            data: data,
                            backgroundColor: [
                                window.theme.primary,
                                window.theme.warning,
                                window.theme.danger
                            ],
                            borderWidth: 5
                        }]
                    },
                    options: {
                        responsive: !window.MSInputMethodContext,
                        maintainAspectRatio: false,
                        legend: {
                            display: false
                        },
                        cutoutPercentage: 75
                    }
                });
            } catch (error) {
                console.log(error)
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Something went wrong!",
                    timer: 1500,
                });
            }
        }

        function handleChange() {
            var selectedValue = document.getElementById("frequency").value;
            console.log("Selected value: " + selectedValue);
            // You can perform any action based on the selected value here
            renderSalesChart(selectedValue)
        }


        async function renderSalesChart(period) {
            try {
                const response = await fetch(`/admin/sales-chart/${period}`)
                const data = await response.json();
                if (!response.ok) {

                    return Swal.showValidationMessage(`${data.message}`);
                }

                const salesArray = [];
                const ordersArray = [];
                const timeArray = [];

                data.forEach(item => {
                    salesArray.push(item.sales);
                    ordersArray.push(item.orders);
                    timeArray.push(item.time);
                });

                const footer = (tooltipItems) => {
                    let orders = 0;
                    data.forEach((report) => {
                        if (report.time == tooltipItems[0].label) {
                            orders = report.orders
                        }
                    })
                    return 'Orders:' + orders;
                }


                let stepSize=2500

                if(period=="Weekly"){
                    stepSize=4000
                }else if(period=="Monthly"){
                    stepSize=7500
                }

                var ctx = document.getElementById("chartjs-dashboard-line").getContext("2d");
                var gradient = ctx.createLinearGradient(0, 0, 0, 225);
                gradient.addColorStop(0, "rgba(215, 227, 244, 1)");
                gradient.addColorStop(1, "rgba(215, 227, 244, 0)");
                // Line chart
                new Chart(document.getElementById("chartjs-dashboard-line"), {
                    type: "line",
                    data: {
                        labels: timeArray,
                        datasets: [{
                            label: "Sales (â‚¹)",
                            fill: true,
                            backgroundColor: gradient,
                            borderColor: window.theme.primary,
                            data: salesArray
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        legend: {
                            display: false
                        },
                        tooltips: {
                            callbacks: {
                                footer: footer
                            }
                        },
                        hover: {
                            intersect: true
                        },
                        plugins: {
                            filler: {
                                propagate: false
                            },
                        },
                        scales: {
                            xAxes: [{
                                reverse: true,
                                gridLines: {
                                    color: "rgba(0,0,0,0.0)"
                                }
                            }],
                            yAxes: [{
                                ticks: {
                                    stepSize:stepSize
                                },
                                display: true,
                                borderDash: [3, 3],
                                gridLines: {
                                    color: "rgba(0,0,0,0.0)"
                                }
                            }]
                        }
                    }
                });
            } catch (error) {
                console.log(error)
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Something went wrong!",
                    timer: 1500,
                });
            }

        }


        const initializeSimplebar = () => {
            const simplebarElement =
                document.getElementsByClassName("js-simplebar")[0];

            if (simplebarElement) {
                const simplebarInstance = new SimpleBar(
                    document.getElementsByClassName("js-simplebar")[0]
                );

                /* Recalculate simplebar on sidebar dropdown toggle */
                const sidebarDropdowns = document.querySelectorAll(
                    ".js-sidebar [data-bs-parent]"
                );

                sidebarDropdowns.forEach((link) => {
                    link.addEventListener("shown.bs.collapse", () => {
                        simplebarInstance.recalculate();
                    });
                    link.addEventListener("hidden.bs.collapse", () => {
                        simplebarInstance.recalculate();
                    });
                });
            }
        };

        const initializeSidebarCollapse = () => {
            const sidebarElement = document.getElementsByClassName("js-sidebar")[0];
            const sidebarToggleElement =
                document.getElementsByClassName("js-sidebar-toggle")[0];

            if (sidebarElement && sidebarToggleElement) {
                sidebarToggleElement.addEventListener("click", () => {
                    sidebarElement.classList.toggle("collapsed");

                    sidebarElement.addEventListener("transitionend", () => {
                        window.dispatchEvent(new Event("resize"));
                    });
                });
            }
        };

        document.addEventListener("DOMContentLoaded", () => initialize());

    </script>

