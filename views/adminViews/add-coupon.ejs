        async function generateCode() {
            try {
                const response = await fetch("/admin/generate-coupon");
                if (response.ok) {
                    const data = await response.json();
                    const { coupon } = data;
                    const couponField = document.querySelector("#coupon-code");
                    couponField.value = coupon;
                }
            } catch (error) {
                console.log(error);
            }
        }

        const nameErrorMessage = document.getElementById("nameErrorMessage");
        const discountAmoutErrorMessage = document.getElementById(
            "discountAmoutErrorMessage"
        );

        const minimumAmountErrorMessage = document.getElementById(
            "minimumAmountErrorMessage"
        );
        const startErrorMessage = document.getElementById("startErrorMessage");
        const endErrorMessage = document.getElementById("endErrorMessage");

        async function addCoupon() {
            let isValidated = true;
            nameErrorMessage.textContent = "";
            discountAmoutErrorMessage.textContent = "";
            minimumAmountErrorMessage.textContent = "";
            startErrorMessage.textContent = "";
            endErrorMessage.textContent = "";

            const couponCode = document.getElementById("coupon-code").value;
            const discountAmount = document.getElementById("discount_amount").value;
            const minimumAmount = document.getElementById("minimum_amount").value;
            const start = document.getElementById("coupon_start").value;
            const end = document.getElementById("coupon_end").value;

            if (!couponCode) {
                nameErrorMessage.textContent = "Coupon code is required";
                isValidated = false;
            }
            if (!discountAmount) {
                discountAmoutErrorMessage.textContent = "Discound amount is required";
                isValidated = false;
            }

            // if(!minimumAmount){
            //     minimumAmountErrorMessage.textContent = "Minimum amount is required";
            //     isValidated = false
            // }

            if (!start) {
                startErrorMessage.textContent = "Start date is required";
                isValidated = false;
            }
            if (!end) {
                endErrorMessage.textContent = "End date is required";
                isValidated = false;
            }
            console.log(start, end)

            if (end && start && end < start) {
                startErrorMessage.textContent = "Invalid dates: End date must be after start date.";
                endErrorMessage.textContent = "Invalid dates: End date must be after start date.";
                console.log("error")
            }

            if (!isValidated) {
                return;
            }
            const data = {
                couponCode,
                discountAmount,
                minimumAmount,
                start,
                end,
            };

            try {
                const response = await fetch("/admin/create-coupon", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data),
                });
                if (response.ok) {
                    await Swal.fire({
                        icon: "success",
                        title: "Coupon has been created",
                        showConfirmButton: false,
                        timer: 1500,
                    });
                    window.location.assign("/admin/coupon");
                }
            } catch (error) {
                console.log(error);
            }
        }

        const initializeSimplebar = () => {
            const simplebarElement =
                document.getElementsByClassName("js-simplebar")[0];

            if (simplebarElement) {
                const simplebarInstance = new SimpleBar(
                    document.getElementsByClassName("js-simplebar")[0]
                );

                /* Recalculate simplebar on sidebar dropdown toggle */
                const sidebarDropdowns = document.querySelectorAll(
                    ".js-sidebar [data-bs-parent]"
                );

                sidebarDropdowns.forEach((link) => {
                    link.addEventListener("shown.bs.collapse", () => {
                        simplebarInstance.recalculate();
                    });
                    link.addEventListener("hidden.bs.collapse", () => {
                        simplebarInstance.recalculate();
                    });
                });
            }
        };

        const initializeSidebarCollapse = () => {
            const sidebarElement = document.getElementsByClassName("js-sidebar")[0];
            const sidebarToggleElement =
                document.getElementsByClassName("js-sidebar-toggle")[0];

            if (sidebarElement && sidebarToggleElement) {
                sidebarToggleElement.addEventListener("click", () => {
                    sidebarElement.classList.toggle("collapsed");

                    sidebarElement.addEventListener("transitionend", () => {
                        window.dispatchEvent(new Event("resize"));
                    });
                });
            }
        };

        document.addEventListener("DOMContentLoaded", () => initialize());
