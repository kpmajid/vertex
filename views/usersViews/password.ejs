    <script>
        const currentPasswordValidationMessage = document.getElementById("currentPasswordValidationMessage")
        const newPasswordValidationMessage = document.getElementById("newPasswordValidationMessage")
        const confirmNewPasswordValidationMessage = document.getElementById("confirmNewPasswordValidationMessage")

        async function changePassowrd() {
            const current_password = document.getElementById("current_password").value
            const new_password = document.getElementById("new_password").value
            const confirm_new_password = document.getElementById("confirm_new_password").value

            currentPasswordValidationMessage.innerText = ""
            newPasswordValidationMessage.innerText = ""
            confirmNewPasswordValidationMessage.innerText = ""

            let isValid = true

            if (current_password.trim() === "") {
                currentPasswordValidationMessage.textContent = "Current password is required";
                isValid = false
            }

            if (new_password.trim() == "") {
                newPasswordValidationMessage.textContent = "New password is required";
                isValid = false
            }

            if (confirm_new_password.trim() == "") {
                confirmNewPasswordValidationMessage.textContent = "Confirm password is required";
                isValid = false
            } else if (new_password !== confirm_new_password) {
                confirmNewPasswordValidationMessage.textContent = "Confirm Passwords do not match";
                isValid = false
            }

            if (!isValid) {
                return
            }

            try {
                console.log("se")
                const response = await fetch("/password", {
                    method: "PATCH",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        password: current_password,
                        newPassword: new_password,
                    }),
                })
                const data = await response.json();
                console.log(data)
                if (!response.ok) {
                    Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: data.message,
                    });

                    throw new Error("Failed to update profile");
                }

                // Handle the response data as needed

                await Swal.fire({
                    icon: "success",
                    title: "Updated",
                    text: data.message,
                });
                window.location.reload()


            } catch (error) {
                console.log(error)
            }

        }



        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById("submitBtn").addEventListener("click", changePassowrd)
        });


    </script>

